<h2>Services :</h2>

<div class="container">
  <div class="row">
    <div class="col-xs-12">
      <div class="table-responsive">
        <table class="table table-bordered table-hover">
          <thead>
            <tr>
              <th>Service</th>
              <th>Description</th>
              <th>Delete Service</th>
            </tr>
          </thead>
          <tbody>

 <% @services.each do |s| %>
      <tr>
        <td><%= s.service %></td>
        <td><%= s.description %></td>
        <td><%= link_to 'Destroy', service_path(s), method: :delete, data: { confirm: 'Are you sure?' } %>   |
                 <%= link_to 'Edit', services_edit_path(s) %>
        </td>
      </tr>
    <% end %>

         </tbody>
        </table>
      </div><!--end of .table-responsive-->
    </div>
  </div>
</div>


