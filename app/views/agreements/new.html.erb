<h2> Place Agreement Order : </h2>
<%= form_for(:agreement,url:agreements_create_path) do |f| %>
  <div>
    <%= f.label :horticulturist%>
    <%= f.collection_select :horticulturist, @users, :to_s , :to_s  %>

  </div>
  <br/>
  <br/>
  <div>
    <%= f.label :policy%>
    <%= f.select(:policy,
                 options_for_select([ ['daily','daily'],['weekly','weekly'],['monthly','monthly'] ]))%>

  </div>
  <br/>
  <br/>
  <div>
    <%= f.label :flowers%>
    <br/>
    <%= f.text_area :flowers, placeholder: "Place your Order..." %>
  </div>
  <br/>
  <br/>
  <div>
<%= f.submit "Place Order"%>
    </div>
  <%end%>
  <br/>
  <br/>
<%= link_to "My Orders", agreements_index_path%>
<br/>
<br/>
<%= link_to "Received Orders",agreements_received_path %>
