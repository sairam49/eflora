<div class="comment clearfix">
	<div class="comment_content">
		<p class="comment_name"><strong><%= User.where(:id => comment.user_id).pluck(:email) %></strong></p>
		<p class="comment_body"><%= comment.body %></p>
    <p class="comment_time"><i><%= time_ago_in_words(comment.created_at) %> Ago</i></p>
	</div>
</div>

